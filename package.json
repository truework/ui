{
  "name": "@truework/ui",
  "version": "0.6.2",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "watch": "microbundle watch --jsx react -f es,cjs",
    "build": "microbundle --jsx react -f es,cjs",
    "storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook",
    "test": "jest",
    "format": "prettier-standard ./src/**/* --format",
    "lint": "prettier-standard ./src/**/* --check"
  },
  "lint-staged": {
    "*.ts|*.tsx": [
      "eslint --fix"
    ]
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "modulePaths": [
      "src"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "author": "truework",
  "license": "MIT",
  "homepage": "https://www.truework.com",
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@storybook/addon-actions": "^5.0.5",
    "@storybook/addon-knobs": "^5.0.5",
    "@storybook/addon-links": "^5.0.5",
    "@storybook/addon-storysource": "^5.0.5",
    "@storybook/addons": "^5.0.5",
    "@storybook/react": "^5.0.5",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.149",
    "@types/react-router-dom": "^5.1.3",
    "@types/storybook__addon-actions": "^3.4.2",
    "@types/storybook__addon-links": "^3.3.4",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-components": "^5.0.1",
    "@types/styled-system": "^5.1.1",
    "core-js": "^3.0.0",
    "husky": "^4.2.3",
    "jest": "^24.5.0",
    "microbundle": "^0.11.0",
    "prettier": "^2.0.2",
    "prettier-standard": "^16.4.1",
    "react": ">=16.8",
    "react-dom": ">=16.8",
    "styled-components": "^5.0.0",
    "ts-jest": "^24.0.0"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "styled-components": "4.x || 5.x"
  },
  "dependencies": {
    "polished": "^3.1.0",
    "react-feather": "^2.0.4",
    "styled-system": "^5.1.2"
  }
}
