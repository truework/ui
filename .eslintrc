{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "useJSXTextNode": true,
    "project": "./tsconfig.json"
  },
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "prettier/@typescript-eslint",
    "plugin:import/typescript",
    "plugin:react/recommended"
  ],
  "plugins": ["@typescript-eslint", "prettier", "react", "import"],
  "env": {
    "browser": true
  },
  "globals": {
    "ENVIRONMENT": true,
    "global": true,
    "document": true,
    "process": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["."]
      },
      "alias": {
        "map": [
          ["src", "./src"],
          ["@", "./src"],
          ["@layouts", "./src/javascript/layouts"],
          ["@pages", "./src/javascript/pages"],
          ["@components", "./src/javascript/components"],
          ["@services", "./src/javascript/services"],
          ["@styles", "./src/javascript/styles"],
          ["@tracking", "./src/javascript/tracking"],
          ["@icons", "./src/javascript/components/icons"],
          ["@utils", "./src/javascript/utils"],
          ["@api", "./src/javascript/api"]
        ],
        "extensions": [".ts", ".tsx", ".js", ".jsx", ".json"]
      }
    }
  },
  "rules": {
    "prettier/prettier": ["error"],
    "import/no-extraneous-dependencies": "warn",
    "class-methods-use-this": "off",
    "multiline-ternary": "off",
    "import/prefer-default-export": "off",
    "import/no-default-export": "warn",
    "camelcase": 0,
    "no-restricted-globals": "off",
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "none",
        "ignoreRestSiblings": true,
        "varsIgnorePattern": "React"
      }
    ],
    "max-classes-per-file": "warn",
    "import/extensions": [
      "error",
      "never",
      {
        "json": "always"
      }
    ],
    "import/named": "off",
    "import/no-cycle": "off",
    "import/no-named-as-default": "off",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "index",
          "parent",
          "internal",
          "sibling"
        ],
        "newlines-between": "always",
        "pathGroups": [
          {
            "pattern": "@services/**/*",
            "group": "index",
            "position": "before",
            "alphabetize": true
          },
          {
            "pattern": "@tracking/**/*",
            "group": "index",
            "alphabetize": true
          },
          {
            "pattern": "@utils/**/*",
            "group": "index",
            "alphabetize": true
          },
          {
            "pattern": "@styles/**/*",
            "group": "index",
            "alphabetize": true
          },
          {
            "pattern": "@api/**/*",
            "group": "index",
            "alphabetize": true
          },
          {
            "pattern": "@layouts/**/*",
            "group": "parent",
            "alphabetize": true
          },
          {
            "pattern": "@pages/**/*",
            "group": "parent",
            "alphabetize": true
          },
          {
            "pattern": "@icons/**/*",
            "group": "internal",
            "alphabetize": true
          },
          {
            "pattern": "@components/**/*",
            "group": "internal",
            "alphabetize": true
          }
        ]
      }
    ],
    "react/default-props-match-prop-types": "off",
    "react/destructuring-assignment": "off",
    "react/forbid-prop-types": "off",
    "react/prop-types": 0,
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [".tsx"]
      }
    ],
    "react/jsx-props-no-spreading": 0,
    "react/no-unused-prop-types": "off",
    "react/prefer-stateless-function": "off",
    "react/require-default-props": "off",
    "react/static-property-placement": [1, "static public field"],
    "react/state-in-constructor": [1, "never"],
    "react/no-unescaped-entities": [
      2,
      {
        "forbid": [">", "}"]
      }
    ],
    "jsx-a11y/label-has-associated-control": [
      2,
      {
        "labelComponents": ["Label"],
        "controlComponents": ["Input", "Textarea", "Select", "Field"],
        "depth": 3
      }
    ],
    "@typescript-eslint/adjacent-overload-signatures": "error",
    "@typescript-eslint/class-name-casing": "error",
    "@typescript-eslint/member-delimiter-style": "error",
    "@typescript-eslint/member-ordering": "off",
    "@typescript-eslint/no-array-constructor": "error",
    "@typescript-eslint/no-empty-interface": 1,
    "@typescript-eslint/no-for-in-array": "error",
    "@typescript-eslint/no-inferrable-types": "error",
    "@typescript-eslint/no-parameter-properties": "error",
    "@typescript-eslint/no-require-imports": "error",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "none",
        "ignoreRestSiblings": true,
        "varsIgnorePattern": "React"
      }
    ],
    "@typescript-eslint/no-use-before-define": "error",
    "@typescript-eslint/prefer-namespace-keyword": "error",
    "@typescript-eslint/promise-function-async": "off",
    "@typescript-eslint/type-annotation-spacing": "error"
  },
  "overrides": [
    {
      "files": ["*.test.ts", "*.test.tsx"],
      "globals": {
        "jest": true,
        "it": true,
        "expect": true,
        "describe": true,
        "beforeEach": true
      },
      "rules": {
        "max-classes-per-file": "off",
        "import/extensions": "off",
        "import/no-extraneous-dependencies": "off",
        "import/no-unresolved": "off",
        "jsx-a11y/anchor-is-valid": "off",
        "jsx-a11y/no-static-element-interactions": "off",
        "react/no-multi-comp": "off",
        "no-console": "off"
      }
    },
    {
      "files": ["*.stories.tsx"],
      "rules": {
        "max-classes-per-file": "off",
        "import/extensions": "off",
        "import/no-extraneous-dependencies": "off",
        "import/no-unresolved": "off",
        "jsx-a11y/anchor-is-valid": "off",
        "jsx-a11y/no-static-element-interactions": "off",
        "react/no-multi-comp": "off",
        "no-console": "off"
      }
    }
  ]
}

